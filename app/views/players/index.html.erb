<h1>There are <%= @players.count %> of players in our league </h1>

<table>
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last</td>
      <td>Action</td>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
      <td><a href="/players/<%= player.id %>">Show</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

</br>
<a href="players/new">Add Player</a>
